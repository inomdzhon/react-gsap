# editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 120
end_of_line = lf
translate_tabs_to_spaces = true
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 2
quote_type = auto
max_line_length = off
trim_trailing_whitespace = false

[*.yml]
indent_size = 4
max_line_length = off
